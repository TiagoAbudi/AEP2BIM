<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="@drawable/shape_branco"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="40dp"
        android:paddingEnd="20dp"
        android:paddingBottom="40dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tela_criar_rebanho_tipo_rebanho_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tipo_rebanho"
                    android:textColor="#0DB666"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tela_criar_rebanho_tipo_rebanho_campo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape"
                    android:hint="@string/digite_o_tipo_do_rebanho"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/tela_criar_rebanho_nome_rebanho_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nome_rebanho"
                    android:textColor="#0DB666"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tela_criar_rebanho_nome_rebanho_campo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape"
                    android:hint="@string/digite_o_nome_do_rebanho"
                    android:inputType="textPersonName"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/tela_criar_rebanho_quantidade_rebanho_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quantidade_animais"
                    android:textColor="#0DB666"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tela_criar_rebanho_quantidade_rebanho_campo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape"
                    android:hint="@string/digite_o_tamanho_do_rebanho"
                    android:inputType="number"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/tela_criar_rebanho_id_fazenda_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/id_fazenda"
                    android:textColor="#0DB666"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tela_criar_rebanho_id_fazenda_campo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape"
                    android:hint="@string/digite_o_id_da_fazenda"
                    android:inputType="number"
                    android:padding="5dp" />

                <Button
                    android:id="@+id/tela_criar_rebanho_botao_cadastra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape"
                    android:text="@string/cadastrar"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>